node {


        stage('Checkout') {

            git url: 'https://github.com/siwar-benrejeb/mrjeffapp.git', credentialsId:  'git-credit-ID', branch: 'master'

        }

      
 	stage('unit test') {
        sh 'mvnw test'
   	 }

   	 stage('integration test') {
        sh 'mvnw failsafe:integration-test failsafe:verify'
   	 }

        stage('Build') {
		dir ('config-service') {	
			
            	sh 'mvn clean package'
		}
        }

        stage('Image') {

            dir ('customer-service') {

	      docker.build "mrjeffapp_customerservice"

            }

        }

        stage ('Run') {

            docker.image("mrjeffapp_customerservice").run('-p 8083:8083 --net=host --expose=8080 -t mrjeffapp_customerservice:latest')

        }
         stage ('Final') {

                    build job: 'order-service-Pipeline', wait: false

                }


}
