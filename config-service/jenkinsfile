node {

		environment {
			maven 'maven 3.5.0'
		}

        stage('Checkout') {

            git url: 'https://github.com/siwar-benrejeb/mrjeffapp.git', credentialsId:  'git-credit-ID', branch: 'master'

        }

        stage('Build') {
		dir ('config-service') {	
			def mvnHome = tool 'maven 3.5.0'
			env.PATH = "${mvnHome}/bin:${env.PATH}"
            sh 'mvn clean package'
		}
        }

        stage('Image') {

            dir ('config-service') {

				def dock = tool 'docker'
				env.PATH = "${dock}/bin:${env.PATH}"
				sh 'docker build -v /var/run/docker.sock:/var/run/docker.sock -t mrjeffapp_configservice .'

            }

        }

        stage ('Run') {

            docker.image("mrjeffapp_configservice").run('-p 8083:8083 --net=host --expose=8080 -t mrjeffapp_configservice:latest')

        }
         stage ('Final') {

                    build job: 'eureka-service-Pipeline', wait: false

                }


}