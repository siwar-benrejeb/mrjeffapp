pipeline {
    agent any
    tools {
        maven 'maven 3.5.0'
    }
    stages {
        stage ('Initialize') {
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                '''
            }
        }

        stage ('Checkout') {
            steps {
                git url: 'https://github.com/siwar-benrejeb/mrjeffapp.git', credentialsId:  'git-credit-ID', branch: 'master'
            }
        }
		
		stage ('Build') {
            steps {
				dir ('config-service') {
					sh 'mvn -Dmaven.test.failure.ignore=true clean package' 
				}
            }
        }
    }
}